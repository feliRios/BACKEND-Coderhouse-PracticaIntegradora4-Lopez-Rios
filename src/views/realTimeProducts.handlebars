<div class="flex relative h-screen items-center justify-center flex-col bg-gradient-to-tl from-gray-800 via-gray-900 to-gray-900">
    <div class="absolute top-20 right-10 w-64 h-64 blur-3xl bg-gradient-to-r from-purple-400 to-pink-500 rounded-full z-[-1]"></div>
    <div class="absolute bottom-20 left-10 w-64 h-64 blur-3xl bg-gradient-to-l from-blue-400 to-green-500 rounded-full z-[-1]"></div>

    <div class="my-6 p-6 bg-gray-900 rounded-lg shadow-xl">
        <div class="flex items-center mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gray-800 text-white">
                <i class="fa-solid fa-circle-info"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-white font-semibold text-lg">Agregar un nuevo producto</h3>
                <p class="text-gray-400 text-sm">Completa los campos requeridos</p>
            </div>
        </div>

        <div class="w-full h-1 bg-gray-700 mb-6"></div>

        <form id="newProductForm" class="max-w-md mx-auto space-y-4">
            <input id="ownerId" type="hidden" name="ownerId" value="{{ userData._id }}">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative">
                    <input type="text" id="name" name="name" placeholder="Título del producto"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="text" id="description" name="description" placeholder="Descripción del producto"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="number" id="price" name="price" placeholder="Precio"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="text" id="code" name="code" placeholder="Código del producto"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="number" id="stock" name="stock" placeholder="Stock disponible"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="text" id="category" name="category" placeholder="Categoría del producto"
                        class="input-field" required>
                </div>
                <div class="relative">
                    <input type="text" id="thumbnail" name="thumbnail" placeholder="URL del thumbnail"
                        class="input-field">
                </div>
            </div>

            <button type="submit"
                class="btn-submit">
                Agregar
            </button>
        </form>
    </div>

    <div class="my-12 flex justify-center items-center">
        <div class="flex grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>