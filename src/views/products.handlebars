<div class="min-h-screen bg-gradient-radial from-purple-500 to-indigo-600 flex flex-col items-center pt-24 relative">
    <div class="absolute top-40 right-10 w-64 h-64 blur-3xl bg-gradient-to-br from-yellow-400 to-red-400 rounded-full z-[-1]"></div>
    <div class="absolute bottom-60 left-10 w-64 h-64 blur-3xl bg-gradient-to-bl from-green-400 to-teal-400 rounded-full z-[-1]"></div>
    <div class="absolute bottom-0 right-20 w-64 h-64 blur-3xl bg-gradient-to-tr from-pink-400 to-purple-400 rounded-full z-[-1]"></div>

    <div class="relative flex flex-col justify-center text-center space-y-4">
        <h2 class="text-white font-semibold text-2xl md:text-3xl">
            Username: {{user.first_name}} <br>Role: {{user.role}}
        </h2>
        <h2 class="text-white font-bold text-4xl md:text-6xl">
            Productos disponibles
        </h2>
    </div>

    <div class="my-12 flex justify-center items-center w-full px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each products}}
            <div class="bg-white shadow-lg rounded-xl p-6 transform hover:scale-105 transition-transform duration-300">
                <div class="flex flex-col justify-center items-center">
                    <img src={{this.thumbnail}} alt="" class="w-64 h-64 object-cover rounded-lg mb-4" />
                </div>
                <h3 class="font-medium text-xl text-gray-900 text-center">
                    {{this.name}}
                </h3>
                <h2 class="text-gray-700 font-semibold text-2xl mt-2 text-center">
                    ${{this.price}}
                </h2>
                <p class="font-medium text-base text-gray-600 text-center mt-2" style="margin: 15px 0;">
                    {{this.description}}
                </p>
                <button
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 rounded-xl w-full transition-colors duration-300">
                    Comprar
                </button>
            </div>
            {{/each}}
        </div>
    </div>
</div>