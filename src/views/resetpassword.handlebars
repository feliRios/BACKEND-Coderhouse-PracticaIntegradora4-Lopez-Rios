<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen">
    <div class="absolute top-16 right-0 w-48 h-48 bg-blue-500 rounded-full opacity-20"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-blue-500 rounded-full opacity-20"></div>
    
    <div class="w-full bg-white rounded-lg shadow-lg dark:bg-gray-800 sm:max-w-md">
        <div class="p-6 space-y-4">
            <h1 class="text-xl font-bold leading-tight text-gray-900 dark:text-white">Reset Password</h1>
            <form action="/auth/password/reset" method="post" class="space-y-4">
                <input type="hidden" name="token" value="{{ token }}">
                <div>
                    <label for="newPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">New Password</label>
                    <input type="password" name="newPassword" id="newPassword" placeholder="••••••••"
                        class="input-field" required>
                </div>
                <button type="submit"
                    class="btn-submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>