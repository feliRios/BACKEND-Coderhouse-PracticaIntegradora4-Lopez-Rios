<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

<div class="min-h-screen bg-gradient-to-br from-pink-400 to-orange-500 flex items-center justify-center relative">
    <div class="absolute top-20 right-10 w-64 h-64 blur-3xl bg-gradient-to-br from-yellow-300 to-red-300 rounded-full z-[-1]"></div>
    <div class="absolute bottom-20 left-10 w-64 h-64 blur-3xl bg-gradient-to-bl from-purple-300 to-blue-300 rounded-full z-[-1]"></div>

    <div class="flex items-center justify-center h-screen">
        <div class="flex items-center justify-center rounded-xl shadow-lg bg-white p-6">
            <div class="flex flex-col w-full max-w-lg">
                <div class="flex items-center justify-center h-12 bg-gray-800 rounded-t-lg">
                    <h1 class="text-white font-medium text-xl">Chat</h1>
                </div>
                <div class="h-96 max-w-lg overflow-y-auto bg-gray-100 rounded-b-lg p-4" id="messagesContainer">
                    <!-- Messages will appear here -->
                </div>

                <div class="w-full flex items-center justify-center mt-4">
                    <div class="flex items-center w-full">
                        <input type="text"
                            class="pl-3 text-gray-700 w-full rounded-l-lg h-12 outline-none border-t border-l border-b border-gray-300 bg-white"
                            id="name" placeholder="Name here" required>
                        <input type="text"
                            class="pl-3 text-gray-700 w-full rounded-r-lg h-12 outline-none border-t border-r border-b border-gray-300 bg-white ml-2"
                            id="message" placeholder="Message here" required>
                        <button
                            class="ml-2 px-4 py-2 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition duration-300"
                            onclick="addMensajes()"><i class="fa-solid fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>